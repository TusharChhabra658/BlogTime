<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>BlogTime Home</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-3">
      <div class="row g-6">
        <% blogs.forEach(blog => { %>
        <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4">
          <div class="card h-100" style="box-shadow: 5px 5px 10px 5px rgb(190, 190, 190);">
            <img
              src="<%= blog.coverImageUrl %>"
              class="card-img-top"
              height="200"
              style="object-fit: cover;"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
               <p>by <%= blog.createdBy.fullName %></p>
               <!-- <p><%= blog.createdAt.toISOString().split('T')[0] %></p> -->
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read blog</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include("./partials/scripts") %>
  </body>
</html>
